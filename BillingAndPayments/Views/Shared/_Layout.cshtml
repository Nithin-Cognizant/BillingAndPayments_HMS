<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BillingAndPayments</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <link rel="stylesheet" href="~/BillingAndPayments.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.min.css">
    <style>
        body {
            padding-top: 75px; /* Adjust this value based on your header's actual height */
            padding-bottom: 65px; /* Adjust based on footer height if you get it fixed */
        }

        .fixed-header {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            z-index: 1000;
        }

        .fixed-footer {
            position: fixed;
            bottom: 0;
            left: 0;
            width: 100%;
            z-index: 1000;
        }

        main {
            min-height: calc(100vh - 70px - 60px);
            margin-top: 20px; /* Adjust based on header and footer heights */
        }

        .container {
            margin-top: 0 !important; /* Override any top margin on the container */
        }
    </style>
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header class="bg-primary bg-gradient text-white shadow-sm py-3 fixed-header">
        <nav class="navbar navbar-expand-sm navbar-dark bg-transparent container">
            <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                <i class="bi bi-currency-dollar me-2"></i> Billing & Payments
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link text-white fw-bold" asp-area="" asp-controller="Billing" asp-action="Index">
                            <i class="bi bi-plus-circle me-2"></i> Create
                        </a>
                    </li>
                    <li class="nav-item ms-3">
                        <a class="nav-link text-white fw-bold" asp-area="" asp-controller="Billing" asp-action="Show">
                            <i class="bi bi-list-ul me-2"></i> Show Bills
                        </a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-5">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-light py-3 fixed-footer">
        <div class="container">
            &copy; 2025 - BillingAndPayments - <a class="text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>